source "https://rubygems.org"

group :production, :development do
  gem 'sinatra'
  gem 'slim'
  gem 'data_mapper'
  gem 'dm-sqlite-adapter'
  gem 'dm-serializer'
  gem 'sass'
  gem 'yahoo-finance'
  gem 'chartkick'
  gem 'nokogiri'
  gem 'coffee-script'
  gem 'therubyracer'
  gem 'sinatra-flash'
  gem 'bcrypt-ruby', :require => 'bcrypt'
end

group :development do
  gem 'sinatra-contrib' # sinatra-reloader is part of sinatra-contrib
end

group :test do
  gem 'rspec'
end